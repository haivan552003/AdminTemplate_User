@model AdminTemplate_User.Models.User
@{
    Layout = "_Layout";
}
<div class="content">
    <form asp-action="Create" class="mt-3">
        <div class="content">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Create User</h5>
                </div>
                <form>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <label asp-for="Id" class="col-form-label col-lg-3">ID<span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                <input asp-for="Id" type="number" class="form-control" placeholder="ID">
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Name" class="col-form-label col-lg-3">Name<span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Birthday" class="col-form-label col-lg-3">Birthday<span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                <input asp-for="Birthday" type="date" class="form-control" placeholder="Birthday">
                                <span asp-validation-for="Birthday" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Gender" class="col-form-label col-lg-3">Gender<span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                <div class="form-check-horizontal">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <label class="form-check mb-2">
                                                <input asp-for="Gender" type="radio" class="form-check-input" value="0" required="">
                                                <span class="form-check-label">Nam</span>
                                            </label>
                                        </div>
                                        <div class="col-lg-4">
                                            <label class="form-check mb-0">
                                                <input asp-for="Gender" type="radio" class="form-check-input" value="1" required="">
                                                <span class="form-check-label" for="validationFormCheck3">Nữ</span>
                                            </label>
                                        </div>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Class" class="col-form-label col-lg-3">Class<span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                <select asp-for="Class" class="form-select" required="">
                                    <option selected="" disabled="" value="">Please select</option>
                                    <option value="SD18301">SD18301</option>
                                    <option value="SD18301">SD18301</option>
                                </select>
                                <span asp-validation-for="Class" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Email" class="col-form-label col-lg-3">Email<span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                <input asp-for="Email" type="email" class="form-control" required="" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>                       
                    </div>

                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-primary">Submit <i class="ph-paper-plane-tilt ms-2"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
